body {
  color: white;
  background: black;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 25px;
  font-weight: 100;
  letter-spacing: 1px;
}
#status {
  position: absolute;
  top: 20px;
  right: 20px;
  background: white;
  color: black;
  padding: 5px;
}
h1 {
  font-size: 90px;
}
h2 {
  font-size: 30px;
}
h1,h2,h3 {
  font-weight: 100;
}
a {
  color: #c5caff;
}
.you {
  font-weight: bold;
}

.your-cards li {
  list-style: none;
  float: left;
}
.card {
  background: white;
  color: black;
  padding: 10px;
  margin: 5px;
  border-radius: 3px;
  img {
    margin-bottom: 2px;
    border-radius: 3px;
  }
  div {
    margin-bottom: -6px;
  }
  .title {
    font-size: 10px;
    width: 165px;
  }
  .price {
    text-align: right;
    .dollar {
      font-size: 70%;
    }
  }

  opacity: 0.8;
  -webkit-transform: translate(0,0);
  -moz-transform: translate(0,0);
  transform: translate(0,0);
  -webkit-transition: opacity 250ms, -webkit-transform 250ms;
  -moz-transition: opacity 250ms, -moz-transform 250ms;
  transition: opacity 250ms, transform 250ms;
}

.your-cards.selectable {
  .card {
    cursor: pointer;
  }
  .card:hover {
    opacity: 0.9;
    -webkit-transform: translate(0, -20px);
    -moz-transform: translate(0, -20px);
    transform: translate(0, -20px);
  }
}
.flippable-wrapper-wrapper {
  display:block;
  width:200px;
  height:140px;
  position:relative;
  float:left;
}
.flippable-wrapper-wrapper.scroll {
  overflow: hidden;
}

.flippable-wrapper-wrapper.scroll .back {
  bottom:-280px;
}
.flippable-wrapper {
  display:block;
  width:100%;
  height:100%;
}

.flippable-wrapper .front {
  display:block;
  width:100%;
  height:100%;
  position:absolute;

}

.flippable-wrapper .back {
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  background:#fff;
}
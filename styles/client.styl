body {
  color: white;
  background: black;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 25px;
  font-weight: 100;
  letter-spacing: 1px;
}
#status {
  position: absolute;
  top: 20px;
  right: 20px;
  background: white;
  color: black;
  padding: 5px;
}
h1 {
  font-size: 90px;
}
h2 {
  font-size: 30px;
}
h1,h2,h3 {
  font-weight: 100;
  margin: 0;
  padding: 0;
}
a {
  color: #c5caff;
}
.you {
  font-weight: bold;
}

#instruction.waiting {
  background: #aaa;
}
#instruction, .status {
  display: inline-block;
  padding: 5px 10px;;
  border-radius: 10px;
  background: #ffffff;
  color: black;
}
.status {
  font-weight: bold;
}

.card {
  display: inline-block !important;
  background: white;
  color: black;
  width: 170px;
  height: 220px;
  padding: 10px;
  margin: 5px;
  vertical-align: top;
  border-radius: 10px;
  img {
    margin-bottom: 2px;
    border-radius: 3px;
  }
  div {
    margin-bottom: -6px;
  }
  .title {
    font-size: 10px;
    width: 165px;
    margin-bottom: 2px;
    height: 60px;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .price {
    text-align: right;
    .dollar {
      font-size: 70%;
    }
  }

  -webkit-transform: translate(0,0);
  -moz-transform: translate(0,0);
  transform: translate(0,0);
  -webkit-transition: opacity 250ms, -webkit-transform 250ms;
  -moz-transition: opacity 250ms, -moz-transform 250ms;
  transition: opacity 250ms, transform 250ms;
}

.your-cards .card {
  opacity: 0.4;
}
.other-card {
  background: black;
  border: dashed 2px white;
  color: white;
  text-align: center;
  div {
    margin-top: 100px;
  }
}
.player span {
  width: 250px;
  display: inline-block;
}
.small-card {
  img {
    width: 85px;
    height: 67px;
  }
  width: 85px;
  height: 110px;
  padding: 5px;
  font-size: 50%;
  * {
    font-size: 50%;
  }
}
.table-proposed {
  width: 250px;
  float: left;
}
.table-offered {
  float: left;
}

.profile .card {
  opacity: 0.8;
  cursor: pointer;
}

.profile .card:hover {
  opacity: 0.99;
}

#end .status {
  margin: 40px 0;
}
#end .profile {
  margin-bottom: 40px;
}

.selectable {
  .card {
    opacity: 0.7;
    cursor: pointer;
  }
  .card:hover {
    opacity: 0.9;
    -webkit-transform: translate(0, -20px);
    -moz-transform: translate(0, -20px);
    transform: translate(0, -20px);
  }
}
.flippable-wrapper-wrapper {
  display:block;
  width:200px;
  height:140px;
  position:relative;
  float:left;
}
.flippable-wrapper-wrapper.scroll {
  overflow: hidden;
}

.flippable-wrapper-wrapper.scroll .back {
  bottom:-280px;
}
.flippable-wrapper {
  display:block;
  width:100%;
  height:100%;
}

.flippable-wrapper .front {
  display:block;
  width:100%;
  height:100%;
  position:absolute;

}

.flippable-wrapper .back {
  display:block;
  width:100%;
  height:100%;
  position:absolute;
  background:#fff;
}
